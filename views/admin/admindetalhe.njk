{% extends "layout.njk" %} {% block head%}
<link rel="stylesheet" href="/styles.css">
<link rel="stylesheet" href="/recipe.css">
<title> {{recipes.title}}</title>
{% endblock %} {% block content %}
<div class="receitas_detalhe edit">
    <div class="topo">
        <div>
        <h1>{{recipes.title}}</h1>
        </div>
        <div>
        <a href="/edit/{{recipes.id}}" class="button">Editar</a>
        
        </div>
    </div>
    <div class="card-detalhe edit" id={{recipes.id}}>
        <img src={{recipes.image}} alt={{recipes.title}}>
        <h1>
            <p class="tittle"> {{recipes.title}}</p>
        </h1>
        
        <h3>
            <p>Ingredientes</p>
        </h3>
        <ul class="text">
            {% for i in recipes.ingredients %}
            <li>{{i}}</li>
            {% endfor %}
        </ul>
        <h3>
            <p class="preparacao"> Modo de Preparo </p>
        </h3>
        <p class="text">{{recipes.preparation}}</p>
        <h3>
            <p class="info">Informações adicionais </p>
        </h3>
        <p class="text">{{recipes.information}}</p>

    </div>

</div>

{% endblock %}