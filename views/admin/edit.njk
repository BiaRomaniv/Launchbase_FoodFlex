{% extends "layout.njk" %}
{% block head %}

<title> Editar Receita</title>
{% endblock %} 

{% block content %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap');


        * {
            margin: 0;
            padding: 0;
            border: 0;
        }

        :root {
            --color-background: rgb(30,30,36);
            --color-back: rgb(246,126,125);
            --color-light: rgb(255,185,151);
            --color-white: #FFF8F0;
        }

        body {
            max-width: 1440px;
            margin: auto;
            background-color: var(--color-background);
        }

        header {
            display: flex;
            align-items: center;
            padding: 24px;
            /*max-width: 940px;*/
            margin: auto;
            border-bottom: 1px solid var(--color-back);
        }

        header h3 a {
            font-family: 'Indie Flower', cursive;
            font-weight: normal;
            letter-spacing: 3px;
            color: var(--color-back);
            font-size: 28px;
            text-decoration: none;
        }

        header .links {
            margin-left: 120px;
        }

        header .links a {
            text-decoration: none;
            font-family: 'Roboto', sans-serif;
            font-size: 16px;
            color:var(--color-white);
            line-height: 19px;
            margin-right: 30px;
            font-weight: bold;
        }

        header .links a:hover {
            color: var(--color-back);
        }

        main {
            max-width: 940px;
            margin: auto;
        }

        main .top {
            background-color: var(--color-light);
            max-width: 940px;
            height: 280px;
            border-radius: 20px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            align-items: center;
            margin-top: 20px;
        }

        main .top .text {
            width: 280px;
            margin: auto;   
        }

        main .top .text h2 {
            margin-bottom: 10px;
            font-family: 'Roboto', sans-serif;
            font-size: 30px;
            color: rgba(30,30,36,0.8);
            line-height: 38px;
            font-weight: bold;
        }

        main .top .text p {
            font-family: 'Roboto', sans-serif;
            font-size: 16px;
            color:  rgba(30,30,36,0.8);    
            line-height: 26px;
        }

        main .top .image {
            margin: auto;
        }

        main .top .image img {
            margin: auto;   
            height: 230px;
        }

        main .receitas {
            margin-top: 50px;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
        }

        main .receitas h3 {
            font-family: 'Roboto', sans-serif;
            font-size: 24px;
            font-weight: bold;
            color:var(--color-white);
            line-height: 30px;
            margin-bottom: 20px;
        }

        .cards.inicial {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 20px;
        }

        .card img {
            width: 300px;
            height: 140px;
            border-radius: 10px;
            object-fit: cover;
            cursor: pointer;
        }

        .card p {
            margin-top: 5px;
            margin-bottom: 30px;
            font-family: 'Roboto', sans-serif;
            font-size: 12px;
            color: var(--color-light);
            line-height: 16px;
        }

        .card .tittle {
            margin-top: 20px;
            margin-bottom: 0;
            font-family: 'Roboto', sans-serif;
            font-size: 18px;
            color:var(--color-back);
            line-height: 22px;
            cursor: pointer;
        }

        footer {
            margin-top: 20px;
            border-top: 1px solid var(--color-back);
            background-color: var(--color-light);
            height: 62px;
            width: 100%;
            align-content: center;
        }

        footer p {
            font-family: 'Roboto', sans-serif;
            font-size: 14px;
            color:var(--color-back);
            text-align: center;
            padding: 23px;
        }

        footer a {
            text-align: center;
            margin: 10px;
            text-decoration: none;
            font-size: 18px;
            color: var(--color-back);
            font-family: 'Indie Flower', cursive;
        }
        footer a:hover{
            color: var(--color-background);
            text-decoration: underline;
        }

        /* SOBRE */

        main .text h2 {
            font-family: 'Roboto', sans-serif;
            font-weight: bold;
            font-size: 20px;
            color: var(--color-back);
            line-height: 30px;
            margin: 20px 5px;
        }

        main .text p {
            font-family:'Roboto', sans-serif;
            font-weight: normal;
            font-size: 16px;
            color:var(--color-white);
            line-height: 28px;
            margin: 20px 5px;
            text-align: justify;
        }



        main{
            padding: 50px;
        }
        main .form.add {
            margin: auto;
            display: grid;
            grid-template-columns: min-content;
            max-width: 940px;
            
        }

        .topo {
            max-width: 940px;
            display: flex;
            justify-content: space-between;   
            margin: auto;
            color: var(--color-back);
            font-size: 20px;
            line-height: 30px;
            font-weight: bold;
            font-family: 'Roboto', sans-serif;
        }

        .formulario {
            max-width: 940px;
            display: grid;
            margin: auto;
        }

        .botoes {
            display: flex;
            justify-content: space-between;
        }
        main input {
            height: 30px;
            margin-top: 5px;
            padding: 10px;
            border-radius: 5px;
            background-color: var(--color-white);
            width: 100%;
        }

        main label {
            margin-bottom: 0px;
            margin-top: 30px;
            color: var(--color-back);
            font-size: 16px;
            font-weight: bold;
            line-height: 20px;
            letter-spacing: 1px;
            font-family: 'Roboto', sans-serif;
        }
        main a {
            margin-top: 5px;
            text-decoration: none;
            color: var(--color-light);
            font-size: 14px;
            font-weight: bold;
            line-height: 24px;
            letter-spacing: 1px;
        }

        main a:hover{
            color: var(--color-back);
        }

        .formulario .infor {
            height: 250px;
        }
        main input.anexo{
            height: 30px;
            margin-top: 5px;
            padding: 10px;
            border-radius: 5px;
            background-color: var(--color-white);
            color: var(--color-background);
            font-size: 14px;
            
        }

        .add.form .buttons {
            justify-self: end;
        }

        .add.form button {
            width: 130px;
            height: 40px;
            background-color:  var(--color-back);
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            font-family:'Roboto', sans-serif ;
            color: var(--color-background);
            margin: 20px 0px 10px 10px; 
            justify-self: end;
            cursor: pointer;
        }

        .add.form button:hover {
            background-color: var(--color-light);
        }
    </style>

    <main class="add form">
        <form class="EDIT"  method="POST" action="/?_method=PUT">     
            <a href="/admindetalhe/{{recipes.id}}">Voltar</a>       
                <div class="topo">
                 
                    <h3>Editar receita</h3>
                   
                </div>
               <div class="formulario">
                    <label for="title">Título</label>
                    <input class="title" type="text" name="title" value="{{ recipes.title }}" >

                    <label for="imagem">Imagem da receita</label>
                    <input class="anexo" type="url" name="image" value="{{ recipes.image }}" >

                    <label for="ingredients">Ingredientes</label>
                    <div id="ingredients">
                        <div class="ingredient">,
                            <input type="text" name="ingredients[]" value="{{ recipes.ingredients }}"  />
                        </div>
                    </div>
                        <a class="add-ingredient">Adicionar ingredientes</a>

                    <label for="preparo">Modo de preparo</label>
                    <div id="preparation">
                        <div class="preparations">
                            <input type="text"  name="preparation" value="{{recipes.preparation}}">
                        </div>                       
                    </div>
                        <a class="add-preparations" >Adicionar novo passo</a>

                    <label for="info">Informações adicionais</label>
                    <input class="infor" type="text" name="information" value="{{recipes.information}}" >
                </form> 
                    <div class="botoes"> 
                    <button type="submit">Salvar</button>

                    <input type="hidden" name="id" value={{recipes.id}}>
                 
                    <form id="form-delete" action="/?_method=DELETE" method="POST">
                        <input type="hidden" name="id" value={{recipes.id}}>
                        <button type="submit">Deletar</button>
                    </form>
                    </div>
                 </div>
               
       
    </main>


{% endblock %}